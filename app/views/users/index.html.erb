<!--- ユーザー一覧ページ --->
<div class="container">
	<div class="row">
        <div class="col-xs-3">
            <!--- @user = current_user  @book = Book.new --->
            <%= render 'users/list', user: @user, book: @book %>
        </div>
        <div class="col-xs-9">
            <h2>Users</h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                    </tr>
                </thead>

                <!--- @users = User.all --->
                <% @users.each do |user| %>
                <tbody>
                    <tr>
                        <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", class: "no_image" %></td>
                        <td><%= user.name %></td>
                        <!--- 各ユーザーのBook一覧ページへ --->
                        <td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>