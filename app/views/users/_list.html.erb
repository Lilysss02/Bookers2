<div class="container">
	<div class="row">
        <div class="col-xs-3">
            <h2>User info</h2>
            <table class="table">
                <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                <tr>
                    <th>name</th><td><%= user.name %></td>
                </tr>
                <tr>
                    <th>introduction</th><td><%= user.introduction %></td>
                </tr>
            </table>

            <!--- ユーザー編集ページへ --->
            <% if user.id = current_user.id %>
                <%=link_to edit_user_path(user), class: "edit_user_#{user.id} btn btn-default btn-block" do %>
                    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                <% end %>
            <% end %>

            <h2>New book</h2>
            <%= form_for(book) do |f| %>
            <div class="new_book_form">
                <label for="title">Title</label>
                <%= f.text_field :title, class: "book_title form-control" %>
                <label for="opinion">Opinion</label>
                <%= f.text_area :opinion, class: "book_body form-control" %><br>
                <%= f.submit "Create Book", class: "btn btn-primary btn-block" %>
            </div>
            <% end %>
        </div>
    </div>
</div>

