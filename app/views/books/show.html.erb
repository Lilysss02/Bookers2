<!--- Book詳細ページ --->
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @user, book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tr>
					<td><%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", class: "no_image" %></td>
					<td><%= @books.title %></td>
					<td><%= @books.opinion %></td>

					<% if @books.user == current_user %>
					<td><%= link_to "Edit", edit_book_path(@books), class: "edit_book_#{@books.id} btn btn-success" %></td>
					<td><%= link_to "Destroy", book_path(@books), class: "destroy_book_#{@books.id} btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
					<% end %>
				</tr>
			</table>
			<!--- ユーザー詳細ページへ戻る --->
			<%= link_to user_path(@books.user_id), class: "user_#{@books.user.id}" do %>
				<%= @user.name %>
			<% end %>

		</div>
	</div>
</div>